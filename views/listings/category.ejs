<div class="category-header">
    <a href="/listings" class="back-btn">← Back</a>
    <h1 class="category-title"><%= categoryName %></h1>
</div>

<div class="product-list">
    <% if (filteredListings.length > 0) { %>
        <% filteredListings.forEach(listing => { %>
            <div class="listing">
                <div class="listing-card">
                    <!-- Company Name -->
                    <h4 class="company-name"><%= listing.company %></h4>

                    <!-- Product Image -->
                    <a href="/listings/<%= listing._id %>">
                        <img src="<%= listing.image %>" alt="<%= listing.title %>" class="listing-img">
                    </a>

                    <!-- Product Info -->
                    <div class="listing-info">
                        <h5 class="listing-title"><%= listing.title %></h5>

                        <!-- Prices -->
                        <p class="price">
                            <span class="original-price">Rs: <%= (listing.price * 1.15).toFixed(2) %></span>
                            <span class="discounted-price">Rs: <%= listing.price.toFixed(2) %></span>
                          </p>

                        <!-- 15% OFF Tag -->
                        <span class="off-tag">15% OFF</span>

                        <!-- Stock -->
                        <span class="stock-status <%= listing.stock === 'In Stock' ? 'in-stock' : 'out-stock' %>">
                            <%= listing.stock %>
                        </span>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <p class="no-products">No products found in this category.</p>
    <% } %>
</div>

<style>
    .category-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    background: #f9f9f9;
    border-bottom: 1px solid #ddd;
}

.category-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #333;
}

.back-btn {
    font-size: 1rem;
    text-decoration: none;
    color: #555;
    border: 1px solid #ccc;
    padding: 5px 12px;
    border-radius: 8px;
    transition: 0.3s;
}

.back-btn:hover {
    background: #e0e0e0;
    color: #000;
}

.product-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    padding: 2rem;
}

.listing {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.listing:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
}

.listing-card {
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    padding: 1rem;
    border: 1px solid #eee;
}

.company-name {
    font-size: 0.9rem;
    color: #888;
    margin-bottom: 0.5rem;
}

.listing-img {
    width: 100%;
    height: auto;
    max-height: 200px;
    object-fit: contain;  /* تصویر پوری نظر آئے گی */
    border-radius: 10px;
    background: #f8f8f8; /* صاف white background */
    padding: 5px;
}


.listing-info {
    padding-top: 0.8rem;
}

.listing-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #222;
    margin-bottom: 0.4rem;
}

.price {
    font-size: 0.95rem;
    margin-bottom: 0.4rem;
}

.original-price {
    text-decoration: line-through;
    color: #888;
    margin-right: 8px;
}

.discounted-price {
    color: #e53935;
    font-weight: bold;
}

.off-tag {
    background: #e53935;
    color: #fff;
    padding: 2px 8px;
    font-size: 0.75rem;
    border-radius: 20px;
    margin-right: 6px;
}

.stock-status {
    font-size: 0.85rem;
    padding: 2px 8px;
    border-radius: 20px;
    font-weight: 500;
}

.in-stock {
    background-color: #c8e6c9;
    color: #2e7d32;
}

.out-stock {
    background-color: #ffcdd2;
    color: #c62828;
}

.no-products {
    text-align: center;
    color: #777;
    font-size: 1.2rem;
    padding: 2rem;
}

</style>
